{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2016", "dom", "es6"],
		"sourceMap": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true
	}
}
